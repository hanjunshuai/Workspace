<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/green_dao_all_data_teacher_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="他的老师：张三 "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/green_dao_all_data_teacher_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="ID为：1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/green_dao_all_data_teacher_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="工号：0123" />

            <TextView
                android:id="@+id/green_dao_all_data_teacher_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年龄：15" />

            <TextView
                android:id="@+id/green_dao_all_data_teacher_sex_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="性别：男" />

            <TextView
                android:id="@+id/green_dao_all_data_teacher_tel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="手机号：13109870990" />
        </LinearLayout>

        <TextView
            android:id="@+id/green_dao_all_data_flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--        <com.aserbao.aserbaosandroid.AUtils.AUI.layout.FlowLayout-->
        <!--            android:id="@+id/green_dao_all_data_flow_layout"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content" />-->
    </LinearLayout>
</LinearLayout>