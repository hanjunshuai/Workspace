<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/container_bg_header">

    <TextView
        android:id="@+id/item_tv_delivery_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="DeliveryNo"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_tv_plan_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dp"
        android:padding="5dp"
        android:text="2020-04-13 00:00:00.000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_tv_load_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_plan_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:padding="5dp"
        android:text="2020-04-13 00:00:00.000"
        android:visibility="gone" />

</RelativeLayout>