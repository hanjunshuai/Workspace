<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="20sp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/item_tv_meters_per_bale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/item_tv_order_number"
            android:drawablePadding="5dp"
            android:padding="@dimen/dp_10"
            android:text="60码" />

        <TextView
            android:id="@+id/item_tv_bales_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_tv_meters_per_bale"
            android:drawablePadding="5dp"
            android:padding="@dimen/dp_10"
            android:text="60码" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_tv_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/gray" />
</LinearLayout>